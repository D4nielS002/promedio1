@model promedio1.Models.Alumno  // Esto enlaza la vista con el modelo Alumno

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Notas</title>
</head>
<body>
    <h1>Formulario de Notas</h1>

    <!-- Formulario que enviará los datos al controlador -->
    <form asp-action="CalcularPromedio" method="post">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="Nombre" required />
        <br />
        <label for="apellido">Apellido:</label>
        <input type="text" id="apellido" name="Apellido" required />
        <br />
        <label for="nota1">Nota 1:</label>
        <input type="number" id="nota1" name="Nota1" required step="0.1" />
        <br />
        <label for="nota2">Nota 2:</label>
        <input type="number" id="nota2" name="Nota2" required step="0.1" />
        <br />
        <button type="submit">Calcular Promedio</button>
    </form>
</body>
</html>
